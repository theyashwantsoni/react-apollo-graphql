{
  "name": "redux-graphql-whiteapp",
  "version": "0.1.0",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "npm run build:check"
    }
  },
  "dependencies": {
    "@apollo/client": "^3.3.13",
    "await-to-js": "^2.1.1",
    "graphql": "^15.5.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "react-toastify": "^5.5.0",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.2"
  },
  "scripts": {
    "start": "npm-run-all --parallel prettier:watch react:start",
    "build:check": "npm-run-all lint:check prettier:check",
    "build": "npm-run-all build:check react:build",
    "deploy": "npm-run-all build firebase:deploy",
    "react:build": "react-scripts build",
    "react:test": "react-scripts test",
    "react:eject": "react-scripts eject",
    "react:start": "react-scripts start",
    "lint:check": "tslint 'src/**/*.{ts,tsx}'",
    "prettier:check": "prettier --check src/**/*.{ts,tsx,json,css}",
    "prettier:write": "prettier --write src/**/*.{ts,tsx,json,css}",
    "prettier:watch": "onchange 'src/**/*.{ts,tsx,json,css}' -- prettier --write {{changed}}",
    "firebase:deploy": "firebase deploy --project foobar-007"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.29",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@types/react-toastify": "^4.1.0",
    "@types/redux": "^3.6.0",
    "@types/redux-logger": "^3.0.7",
    "@types/redux-thunk": "^2.1.0",
    "firebase-tools": "^7.14.0",
    "husky": "^4.2.3",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "prettier": "^1.19.1",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.1.0",
    "typescript": "^3.7.5"
  }
}
